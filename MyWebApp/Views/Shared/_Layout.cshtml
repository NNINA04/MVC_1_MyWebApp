<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/css/Default.css" rel="stylesheet" />
    <link href="~/css/Everything.css" rel="stylesheet" />
    <link href="~/css/TopBar.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="center">
        <a asp-controller="Visits" asp-action="AllVisitors" class="allVisitorsButton">All Visitors</a>
    </div>

    <div>
        <form asp-controller="Visits" asp-action="DefinitVisitor" method="get">
            <input type="number" name="id" placeholder="Type an id"
                   min="0" max="@int.MaxValue" class="idInputNumber">
        </form>
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>